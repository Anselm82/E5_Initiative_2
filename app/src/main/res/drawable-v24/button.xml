<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="#333333" android:startColor="#666666" />

            <stroke android:width="1px" android:color="#000000" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="#aaa" android:startColor="#ddd" />

            <stroke android:width="1px" android:color="#000000" />
        </shape>
    </item>
